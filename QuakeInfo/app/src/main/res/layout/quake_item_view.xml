<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/colorQuakeItemCard"
    android:elevation="4dp"
    android:padding="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorQuakeItemCard"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quake_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mako_regular"
                android:textColor="@color/colorQuakeLocationHeading"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Shahdol, Madhya Pradesh, India" />

            <TextView
                android:id="@+id/quake_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mako_regular"
                android:textColor="@color/colorQuakeTime"
                android:textSize="14sp"
                tools:text="Aug 1, 1999 18:05:33" />

        </LinearLayout>

        <TextView
            android:id="@+id/quake_magnitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/mako_regular"
            android:gravity="center"
            android:textColor="@color/colorQuakeMagnitude"
            android:textSize="32sp"
            tools:text="6.9" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

