    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/quakeOverviewFragment">

    <fragment
        android:id="@+id/quakeOverviewFragment"
        android:name="com.example.quakeinfo.screens.quakeoverview.QuakeOverviewFragment"
        android:label="@string/fragment_overview_title"
        tools:layout="@layout/fragment_quake_overview">
        <action
            android:id="@+id/action_quakeOverviewFragment_to_quakeDetailFragment"
            app:destination="@id/quakeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/quakeDetailFragment"
        android:name="com.example.quakeinfo.screens.quakedetail.QuakeDetailFragment"
        android:label="@string/fragment_detail_title"
        tools:layout="@layout/fragment_quake_detail" />
